<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="@dimen/_3sdp" android:color="@color/colorPrimary" />
            <solid android:color="@color/colorWhite" />

        </shape>
    </item>

    <item android:bottom="@dimen/_2sdp">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorWhite" />
            <solid android:color="@color/colorWhite" />
        </shape>
        <corners
            android:bottomLeftRadius="@dimen/_2sdp"
            android:bottomRightRadius="@dimen/_2sdp"
            android:topLeftRadius="0dp"
            android:topRightRadius="0dp"
            />
    </item>

</layer-list>