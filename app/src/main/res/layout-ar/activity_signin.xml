<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:andriod="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:fillViewport="true"
    android:fitsSystemWindows="false"
    android:scrollbars="none"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_main_signin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llTopContents"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/ic_login_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnToolbarBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:src="@drawable/ic_logo"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xmedium"
            android:layout_marginRight="@dimen/margin_xmedium"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSignInHeading"
                android:fontFamily="@font/calibri"
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="right"
                android:text="@string/tv_welcome"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_22sdp"
                tools:ignore="MissingPrefix" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xmedium"
            android:layout_marginRight="@dimen/margin_xmedium"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEmailHeading"
                    android:fontFamily="@font/calibrib"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_email"
                    android:gravity="right"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15sdp" />

                <EditText
                    android:id="@+id/etEmail"
                    android:fontFamily="@font/calibri"
                    android:theme="@style/EditTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:background="@drawable/edittext_bottom_line_shape"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:hint="@string/tv_email_address"
                    android:inputType="textEmailAddress"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_15sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGrayLight"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/tvPasswordHeading"
                    android:fontFamily="@font/calibrib"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:text="@string/tv_password"
                    android:gravity="right"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15sdp" />

                <EditText
                    android:id="@+id/etPassword"
                    android:fontFamily="@font/calibri"
                    android:theme="@style/EditTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bottom_line_shape"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:hint="@string/tv_password"
                    android:inputType="textPassword"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_15sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGrayLight"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/tvForgotPassword"
                    android:fontFamily="@font/calibri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingTop="@dimen/_7sdp"
                    android:paddingBottom="@dimen/_7sdp"
                    android:text="@string/tv_forgot_password"
                    android:textColor="#bc000f"
                    android:textSize="@dimen/_14sdp" />

                <Button
                    android:id="@+id/btnLogin"
                    android:fontFamily="@font/calibrib"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/btn_login_selector"
                    android:gravity="center"
                    android:text="@string/tv_signIn"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_xmedium"
            android:layout_marginRight="@dimen/margin_xmedium"
            android:layout_marginBottom="@dimen/margin_default"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTermsAndConditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_7sdp"
                android:paddingBottom="@dimen/_7sdp"
                android:gravity="center"
                android:fontFamily="@font/calibri"
                android:text="@string/tv_terms_conditions"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_13sdp" />

            <RelativeLayout
                android:id="@+id/clkSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvSignInFooter"
                    android:fontFamily="@font/calibrib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_90sdp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="@string/tv_donot_have_sign_up"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14sdp"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/tvLogInRed"
                    fontPath="fonts/OpenSans-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tvSignInFooter"
                    android:text="@string/tv_sign_up"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14sdp"
                    tools:ignore="MissingPrefix" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
        <TextView
            android:id="@+id/tvSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_skip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/calibrib"/>
        <FrameLayout
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/avi"
                style="@style/AVLoadingIndicatorView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:visibility="visible"
                app:indicatorColor="#939393"
                app:indicatorName="LineSpinFadeLoaderIndicator" />

        </FrameLayout>
    </RelativeLayout>
</ScrollView>