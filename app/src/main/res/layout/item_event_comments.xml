<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_commentuser"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_margin="@dimen/_20sdp"/>
    <TextView
        android:id="@+id/tv_commentuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_commentuser"
        android:text="Ronaldo"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="@font/calibri"
        android:textColor="@color/txtdarkgray"
        android:layout_toLeftOf="@+id/tv_commentdate"
        android:layout_marginTop="@dimen/_20sdp"/>
    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_commentuser"
        android:textColor="@color/txtlightgray"
        android:layout_marginRight="@dimen/_10sdp"
        android:text="Hey lets catch up soon"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/calibri"
        android:layout_toRightOf="@+id/iv_commentuser"
        />
    <TextView
        android:id="@+id/tv_commentdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/_5sdp"
        android:fontFamily="@font/calibri"
        android:layout_marginRight="@dimen/_5sdp"
        android:textColor="@color/colorPrimary"
        android:text="Today 3:00 PM"
        android:textSize="@dimen/_10sdp"
     android:layout_marginTop="@dimen/_20sdp"
        />

</RelativeLayout>