                    <Button
                        android:id="@+id/btnSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/margin_xlarge"
                        android:background="@drawable/btn_login_selector"
                        android:fontFamily="@font/calibrib"
                        android:gravity="center"
                        android:text="@string/tv_sign_up"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_15sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/clkSignIn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvLogIn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_40sdp"
                                android:enabled="false"
                                android:fontFamily="@font/calibri"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:text="@string/tv_already_had_account"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_14sdp"
                                tools:ignore="MissingPrefix" />

                            <TextView
                                android:id="@+id/tvLogInRed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/tvLogIn"
                                android:enabled="false"
                                android:fontFamily="@font/calibrib"
                                android:text="@string/tv_signIn"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/_14sdp"
                                tools:ignore="MissingPrefix" />
                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <!-- Error Message Layout -->
            <RelativeLayout
                android:id="@+id/notificationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

            </RelativeLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/avi"
                style="@style/AVLoadingIndicatorView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:visibility="visible"
                app:indicatorColor="#939393"
                app:indicatorName="LineSpinFadeLoaderIndicator" />

        </FrameLayout>
    </RelativeLayout>
</ScrollView>
