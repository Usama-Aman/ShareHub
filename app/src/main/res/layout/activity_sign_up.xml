<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llMainSignUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llTopContents"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/ic_login_bg"
                android:gravity="left"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_12sdp"
                    android:src="@drawable/ic_white_arrow" />

                <TextView
                    android:id="@+id/tvNowToGcam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:gravity="left"
                    android:paddingLeft="@dimen/margin_xmedium"
                    android:paddingRight="@dimen/margin_xmedium"
                    android:text="@string/tv_now_to_gcam"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/tvGetStarted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibrib"
                    android:gravity="left"
                    android:paddingLeft="@dimen/margin_xmedium"
                    android:paddingRight="@dimen/margin_xmedium"
                    android:text="@string/tv_get_started"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_30sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xmedium"
                android:layout_marginRight="@dimen/margin_xmedium"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvEmailHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/font_standard"
                        android:fontFamily="@font/calibrib"
                        android:text="@string/tv_email"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/calibri"
                        android:gravity="left"
                        android:hint="@string/tv_email_address"
                        android:inputType="textEmailAddress"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:paddingTop="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_15sdp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGrayLight"
                        android:textSize="@dimen/_14sdp"
                        android:theme="@style/EditTextTheme" />

                    <TextView
                        android:id="@+id/tvUserNameHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibrib"
                        android:text="@string/tv_user_name"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:id="@+id/etUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/calibri"
                        android:gravity="left"
                        android:hint="@string/tv_user_name"
                        android:inputType="textCapSentences"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:paddingTop="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_15sdp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGrayLight"
                        android:textSize="@dimen/_14sdp"
                        android:theme="@style/EditTextTheme" />

                    <TextView
                        android:id="@+id/tvNameHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/font_standard"
                        android:fontFamily="@font/calibrib"
                        android:text="@string/tv_name"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/calibri"
                        android:gravity="left"
                        android:hint="@string/tv_name"
                        android:inputType="textCapSentences"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:paddingTop="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_15sdp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGrayLight"
                        android:textSize="@dimen/_14sdp"
                        android:theme="@style/EditTextTheme" />

                    <TextView
                        android:id="@+id/tvPasswordHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/font_standard"
                        android:fontFamily="@font/calibrib"
                        android:text="@string/tv_password"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/calibri"
                        android:gravity="left"
                        android:hint="@string/tv_password"
                        android:inputType="textPassword"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:paddingTop="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_15sdp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGrayLight"
                        android:textSize="@dimen/_14sdp"
                        android:theme="@style/EditTextTheme" />

                    <TextView
                        android:id="@+id/tvCPasswordHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/font_standard"
                        android:fontFamily="@font/calibrib"
                        android:text="@string/tv_confirm_password"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/calibri"
                        android:gravity="left"
                        android:hint="@string/tv_confirm_password"
                        android:inputType="textPassword"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:paddingTop="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_15sdp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGrayLight"
                        android:textSize="@dimen/_14sdp"
                        android:theme="@style/EditTextTheme" />

