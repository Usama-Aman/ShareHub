<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:andriod="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fillViewport="true"
    android:fitsSystemWindows="false"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_main_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/llTopContents"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/ic_login_bg"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnToolbarBack"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_logo"
                    android:visibility="visible" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xmedium"
                android:layout_marginRight="@dimen/margin_xmedium"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNewHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/calibri"
                    android:gravity="left"
                    android:text="@string/tv_new_to_gcam"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_16sdp"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/tvSignUpHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:gravity="left"
                    android:text="@string/tv_sign_up_now"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_26sdp"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xmedium"
                android:layout_marginTop="@dimen/margin_xmedium"
                android:layout_marginRight="@dimen/margin_xmedium"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvMobileHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/font_standard"
                        android:fontFamily="@font/calibrib"
                        android:text="@string/tv_mobile_number"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edittext_bottom_line_shape"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/spinnerCountryCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:background="@drawable/create_account_spinner_shape"
                            android:gravity="center" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:background="@color/colorGrayLight" />

                        <EditText
                            android:id="@+id/etPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:background="@null"
                            android:ellipsize="end"
                            android:fontFamily="@font/calibri"
                            android:gravity="left"
                            android:hint="5xxxxxxxxx"
                            android:inputType="number"
                            android:maxLength="15"
                            android:maxLines="1"
                            android:paddingLeft="10dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="10dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="15dp"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorGrayLight"
                            android:textSize="@dimen/_14sdp"
                            android:theme="@style/EditTextTheme" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:background="@drawable/btn_login_selector"
                        android:fontFamily="@font/calibrib"
                        android:gravity="center"
                        android:text="@string/tv_sign_up"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/clkSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xmedium"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginRight="@dimen/margin_xmedium"
                android:layout_marginBottom="@dimen/margin_default"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvSignInFooter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_40sdp"
                        android:enabled="false"
                        android:fontFamily="@font/calibri"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:text="@string/tv_already_had_account"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_14sdp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/tvLogInRed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="-3dp"
                        android:layout_toRightOf="@+id/tvSignInFooter"
                        android:enabled="false"
                        android:fontFamily="@font/calibrib"
                        android:text="@string/tv_signIn"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp"
                        tools:ignore="MissingPrefix" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/avi"
                style="@style/AVLoadingIndicatorView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:visibility="visible"
                app:indicatorColor="#939393"
                app:indicatorName="LineSpinFadeLoaderIndicator" />

        </FrameLayout>
    </RelativeLayout>
</ScrollView>